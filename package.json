	"files": [
		"index.js",
		"walkers"
	],
	"devDependencies": {
		"eslint": "^7.32.0",
		"husky": "^4.3.8",
		"prettier": "^2.3.2",
		"pretty-quick": "^3.1.1",
		"tape": "^5.0.1"
	},
	"scripts": {
		"test": "tape index.test.js",
